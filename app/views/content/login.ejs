<html>
<div class="container">
  <div id="wrapper">
  <link rel="stylesheet" href="../css/about.css">
    <div class="row">
      <div class="offset-md-3 col-md-6 col-sm-12">
            <div class="login" id="contentArea">
              <body>
                <h1 class="display-4">Login</h1>
                <hr>
  
                <!-- Message Area -->
                <% if(messages.length > 0) { %>
                  <div id="messageArea" class="alert alert-danger">
                  <%= messages %>
                </div>
                <% } %>
  
                <form method="POST" id="loginForm" novalidate>
                  <div class="form-group mb-2">
                    <div class="input-group">
                      <span class="input-group-addon">
                      </span>
                      <input type="text" class="form-control" id="username" name="username"  required
                      value="" placeholder="Username">
                    </div>
                  
                  </div>
  
                  <div class="form-group mb-2">
                    <div class="input-group">
                      <span class="input-group-addon">
                      </span>
                      <input type="password" class="form-control" id="password" name="password"  required
                      value="" placeholder="Password">
                    </div>
                  
                  </div>                                        
                  <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Login">
                    <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>
                </form>
              
            </div>
            <p class="text-center text-muted small">
              <a class="link" href="/register"><input type="button" style="background-color:royalblue; text-decoration-color: aliceblue;" value="Create New Account"></a>
            </p>
      </div>
    </div>
  </div>
</div>
</body>
</html>